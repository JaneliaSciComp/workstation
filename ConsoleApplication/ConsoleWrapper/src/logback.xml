<?xml version="1.0" encoding="UTF-8"?>

<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>workstation.log</file>
        <append>false</append>
        <encoder>
            <pattern>%date [%thread] %level [%logger] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [%logger] %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.janelia.it.workstation" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.api.DomainModel" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.events.selection" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.components" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.gui.listview" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.gui.support" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.nodes" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.model" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.browser.api.navigation" level="INFO"/>
    <logger name="org.janelia.it.jacs.model.domain.support" level="INFO"/>

    <!--  perf4j loggers must be set to DEBUG to log performance benchmarks-->
    <logger name="org.janelia.it.workstation.shared.util.Utils" level="INFO"/>
    <logger name="org.janelia.it.workstation.gui.framework.viewer.LoadImageWorker" level="INFO"/>

    <!-- Squelch the LOCI library -->
    <logger name="loci" level="WARN"/>

    <!-- Strictly speaking, the level attribute is not necessary since -->
    <!-- the level of the root level is set to DEBUG by default.       -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
